<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
    android:background="@drawable/pg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.computercenter.azkar.Page2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:background="#fff"
            android:elevation="4pt"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="عن التطبيق : "
                android:textColor="#000"

                android:textSize="30pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="تطبيق للأذكارات الكتابيه والصوتيه بسيط وسهل الاستخدام مع تكبير وتصغير الخط .."
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#000" />

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="قيم التطبيق "
                android:textSize="35dp" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="مشاركة التطبيق "
                android:textSize="35dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2pt"
                android:background="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="01552296432"
                android:textColor="#000"
                android:textSize="35dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="هذا الرقم الخاص بالموبايل والفيس "
                android:textColor="#000"
                android:textSize="35dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
