<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/pg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.computercenter.azkar.Page1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_margin="30dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_margin="30dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
               android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text11"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"
                    android:text="@string/Aa1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button

                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_play_button"
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginRight="10dp"
                    android:id="@+id/pause"
                    android:background="@drawable/ic_rounded_pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/zoom_in"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/ic_zoom_in"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/zoom_out"
                    android:background="@drawable/ic_zoom_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_margin="30dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_margin="30dp"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text22"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:layout_height="wrap_content"
                        android:text="@string/Aa2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_play_button"
                        android:id="@+id/play1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_marginRight="10dp"
                        android:id="@+id/pause1"
                        android:background="@drawable/ic_rounded_pause_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/zoom_in1"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/ic_zoom_in"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/zoom_out1"
                        android:background="@drawable/ic_zoom_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_margin="30dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_margin="30dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/text33"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"
                    android:text="@string/Aa3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_play_button"
                    android:id="@+id/play2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginRight="10dp"
                    android:id="@+id/pause2"
                    android:background="@drawable/ic_rounded_pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/zoom_in2"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/ic_zoom_in"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/zoom_out2"
                    android:background="@drawable/ic_zoom_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
